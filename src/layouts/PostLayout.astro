---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="text-white p-4 flex flex-col gap-10">
    <div class="flex flex-col w-full">
      <nav
        class="flex mx-auto z-10 backdrop-blur-xl w-fit flex-row text-white font-kodeMono rounded-full lg:text-xl self-center top-5 justify-center"
      >
        <div
          class="flex flex-row justify-between text-xs lg:text-base lg:bg-transparent backdrop-blur-xl lg:gap-10 rounded-full top-4"
        >
          <a
            class="hover:cursor-pointer p-2 font-bold px-4 hover:bg-teaGreen hover:text-primaryDark rounded-full"
            href="/">Home</a
          >
          <a
            class="hover:cursor-pointer p-2 font-bold px-4 hover:bg-teaGreen hover:text-primaryDark rounded-full"
            href="/posts">Blog</a
          >
          <a
            class="hover:cursor-pointer p-2 font-bold px-4 hover:bg-teaGreen hover:text-primaryDark rounded-full"
            >Resume</a
          >
          <a
            class="hover:cursor-pointer p-2 font-bold px-4 hover:bg-teaGreen hover:text-primaryDark rounded-full"
            >Contact</a
          >
        </div>
      </nav>
    </div>
    <div
      class="flex flex-row top-0 mx-auto text-center justify-center sticky text-xl w-full lg:text-2xl font-kodeMono backdrop-blur-xl bg-primaryDark z-10 p-2 lg:p-4"
    >
      <h1
        class="mx-auto w-full text-transparent bg-gradient-to-r bg-clip-text from-blue-500 to-red-500"
      >
        {frontmatter.title}
        <span class="italic text-sm text-white">{frontmatter.date}</span>
      </h1>
    </div>
    <div class="flex flex-row w-full gap-6 lg:gap-16 relative">
      <!-- <div class="ml-10 w-1/4 sticky top-10 h-fit">
        {
          frontmatter?.tableOfContents?.length > 0 && (
            <>
              <p class="font-bold">Table Of Contents</p>
              <ol class="flex flex-col gap-4 pt-4">
                {frontmatter.tableOfContents.map((tableOfContent: string) => {
                  return <li class="text-red-500">{tableOfContent}</li>;
                })}
              </ol>
            </>
          )
        }
      </div> -->
      <div
        class="mx-auto p-4 pt-0 lg:w-1/2 font-montserrat pb-[5rem] lg:pb-[10rem]"
      >
        <slot />
      </div>
    </div>
  </div>
</Layout>
